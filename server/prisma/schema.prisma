generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String?
  name         String
  role         String        @default("USER") // ADMIN, USER, GUEST
  emailVerified DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  // New fields for Client requirements
  lastLogin    DateTime?
  status       String        @default("ACTIVE") // ACTIVE, SUSPENDED, INACTIVE
  apiKey       String?       @unique // Authentication Token

  // Relations
  integrations Integration[]
  refreshTokens RefreshToken[]
  passwordResetTokens PasswordResetToken[]
  emailVerificationTokens EmailVerificationToken[]
  
  // New Relations
  trafficMetrics TrafficMetric[]
  settings       Settings?
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model EmailVerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)
}

model Integration {
  id          String     @id @default(uuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform    String     // FACEBOOK, GOOGLE, TIKTOK, YOUTUBE
  accessToken String?    // Encrypted in real app
  refreshToken String?
  status      String     @default("DISCONNECTED") // CONNECTED, DISCONNECTED, ERROR
  lastSync    DateTime?
  campaigns   Campaign[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Campaign {
  id            String        @id @default(uuid())
  integrationId String
  integration   Integration   @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  externalId    String
  name          String
  status        String        // ACTIVE, PAUSED
  metrics       DailyMetric[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@unique([integrationId, externalId])
}

model DailyMetric {
  id          String   @id @default(uuid())
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  date        DateTime
  spend       Float
  leads       Int
  revenue     Float
  impressions Int
  clicks      Int
  createdAt   DateTime @default(now())

  @@unique([campaignId, date])
}

// --- New Models for Traffic Dashboard ---

model Api {
  id          String   @id @default(uuid())
  endpoint    String   @unique
  method      String   // GET, POST, PUT, DELETE
  description String?
  rateLimit   Int      @default(100) // Requests per minute
  status      String   @default("ACTIVE") // ACTIVE, INACTIVE
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  metrics     TrafficMetric[]
}

model TrafficMetric {
  id        String   @id @default(uuid())
  apiId     String
  api       Api      @relation(fields: [apiId], references: [id], onDelete: Restrict)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Restrict)
  timestamp DateTime @default(now())
  status    Int      // HTTP Status Code (200, 400, 500)
  duration  Int      // Response time in ms
  size      Int      // Request/Response size in bytes
  ip        String   // Source IP address

  @@index([apiId])
  @@index([userId])
  @@index([timestamp])
  @@index([status])
}

model Settings {
  id             String @id @default(uuid())
  userId         String @unique
  user           User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  usageLimits    String? // JSON: { maxRequests: 1000, ... }
  trafficAlerts  String? // JSON: { threshold: 80, email: true }
  notifications  String? // JSON: { email: true, sms: false }
  dashboardView  String? // JSON: { theme: 'dark', widgets: [] }
  updatedAt      DateTime @updatedAt
}
