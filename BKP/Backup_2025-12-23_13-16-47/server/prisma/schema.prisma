generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String?
  name         String
  role         String        @default("USER") // ADMIN, USER, GUEST
  emailVerified DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  // New fields for Client requirements
  lastLogin    DateTime?
  status       String        @default("ACTIVE") // ACTIVE, SUSPENDED, INACTIVE
  apiKey       String?       @unique // Authentication Token
  
  // OAuth Providers
  googleId     String?       @unique
  githubId     String?       @unique

  // Relations
  integrations Integration[]
  onboarding   OnboardingStatus? // Relation to track setup progress
  refreshTokens RefreshToken[]
  passwordResetTokens PasswordResetToken[]
  emailVerificationTokens EmailVerificationToken[]
  
  // New Relations
  trafficMetrics TrafficMetric[]
  settings       Settings?
  leads          Lead[]
}

model Lead {
  id        String   @id @default(uuid())
  email     String
  name      String?
  phone     String?
  status    String   @default("NEW") // NEW, CONTACTED, QUALIFIED, CONVERTED, LOST
  source    String?  // Facebook, Google, Organic
  userId    String   // The client who owns this lead
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  interactions Interaction[]

  @@index([userId])
  @@index([email])
}

model Interaction {
  id        String   @id @default(uuid())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  type      String   // EMAIL, CALL, MEETING, NOTE
  notes     String?
  date      DateTime @default(now())
  createdBy String   // User ID of who logged it
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model EmailVerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)
}

model Integration {
  id          String     @id @default(uuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform    String     // FACEBOOK, GOOGLE, TIKTOK, YOUTUBE, STRIPE, OPENAI
  
  // Security: Encrypted Credentials
  accessToken String?    
  encryptedKey String?   // New: AES Encrypted Key
  iv           String?   // New: Initialization Vector
  
  refreshToken String?
  status      String     @default("DISCONNECTED") // CONNECTED, DISCONNECTED, ERROR, PENDING
  lastSync    DateTime?
  errorLog    String?    // New: Error tracking
  
  campaigns   Campaign[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model OnboardingStatus {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Steps Status
  stripe    String   @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  openai    String   @default("PENDING")
  googleAds String   @default("PENDING")
  
  completed Boolean  @default(false)
  updatedAt DateTime @updatedAt
}

model Campaign {
  id            String        @id @default(uuid())
  integrationId String
  integration   Integration   @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  externalId    String
  name          String
  status        String        // ACTIVE, PAUSED
  metrics       DailyMetric[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@unique([integrationId, externalId])
}

model DailyMetric {
  id          String   @id @default(uuid())
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  date        DateTime
  spend       Float
  leads       Int
  revenue     Float
  impressions Int
  clicks      Int
  createdAt   DateTime @default(now())

  @@unique([campaignId, date])
}

// --- New Models for Traffic Dashboard ---

model Api {
  id          String   @id @default(uuid())
  endpoint    String   @unique
  method      String   // GET, POST, PUT, DELETE
  description String?
  rateLimit   Int      @default(100) // Requests per minute
  status      String   @default("ACTIVE") // ACTIVE, INACTIVE
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  metrics     TrafficMetric[]
}

model TrafficMetric {
  id        String   @id @default(uuid())
  apiId     String
  api       Api      @relation(fields: [apiId], references: [id], onDelete: Restrict)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Restrict)
  timestamp DateTime @default(now())
  status    Int      // HTTP Status Code (200, 400, 500)
  duration  Int      // Response time in ms
  size      Int      // Request/Response size in bytes
  ip        String   // Source IP address

  @@index([apiId])
  @@index([userId])
  @@index([timestamp])
  @@index([status])
}

model Settings {
  id             String @id @default(uuid())
  userId         String @unique
  user           User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  usageLimits    String? // JSON: { maxRequests: 1000, ... }
  trafficAlerts  String? // JSON: { threshold: 80, email: true }
  notifications  String? // JSON: { email: true, sms: false }
  dashboardView  String? // JSON: { theme: 'dark', widgets: [] }
  updatedAt      DateTime @updatedAt
}
